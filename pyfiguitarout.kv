#: import os os
#:import utils kivy.utils


<Fretboard>:
    orientation: "vertical"
    size_hint_x: 0.9
    size_hint_y: None
    height: self.width / 4
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    spacing: 5

<String>:
    size: self.size
    pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgba: [1, 0, 0, 1]
            Rectangle:
                pos: self.pos
                size: self.size


Main:
    BoxLayout:
        orientation: "vertical"
        RelativeLayout:
            Button:
                text: "LOAD SONG"
                size_hint: [0.25, 0.5]
                pos_hint: {'center_x': 0.25, 'center_y': 0.5}
                on_press: root.show_load()
            Button:
                text: "PLAY"
                size_hint: [0.25, 0.5]
                pos_hint: {'center_x': 0.75, 'center_y': 0.5}
                on_press: fretboard.play_song(self)
        Fretboard:
            id: fretboard
            song: root.song




<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: os.getcwd()

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.selection)